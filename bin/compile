#!/usr/bin/env ruby
# vi:syntax=ruby

#sync output
$stdout.sync = true

build_path = ARGV[0]
cache_path = ARGV[1]

puts "Installing Dotnet"

# system("sudo apt-get install libunwind gettext")
# puts "Install libunwind"
# system("curl -LO http://download.savannah.gnu.org/releases/libunwind/libunwind-1.1.tar.gz")
# system("tar zxvf libunwind-1.1.tar.gz")
# Dir.chdir("libunwind-1.1") do
#   system("./configure --prefix=#{build_path}/vendor/libunwind")
#   system("make")
#   system("make install")
# end

puts "Install libunwind"
system("mv libunwind8.tgz #{build_path}/libunwind8.tgz")
Dir.chdir("/") do
  puts("tar zxvf #{build_path}/libunwind8.tgz")
  system("tar zxvf #{build_path}/libunwind8.tgz")
end

puts("#{build_path}/vendor")
system('mkdir', '-p', "#{build_path}/vendor")
system("curl -sSk https://raw.githubusercontent.com/dotnet/cli/rel/1.0.0/scripts/obtain/dotnet-install.sh | bash /dev/stdin --version 1.0.0-preview1-002702 --install-dir #{build_path}/vendor/dotnet")

Dir.chdir(build_path)
puts "Restoring packages"
system("#{build_path}/vendor/dotnet/dotnet restore")

puts "Building"
system("#{build_path}/vendor/dotnet/dotnet build")

puts "Publishing"
system("#{build_path}/vendor/dotnet/dotnet publish")

puts "Directory Tree"
puts "BuildPath: #{build_path}"
system("find #{build_path}")
puts "Directory Tree Vendor"
system("find #{build_path}/vendor/dotnet")
