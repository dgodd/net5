#!/usr/bin/env ruby
# vi:syntax=ruby
require 'yaml'

build_path = ARGV[0]
build_path = '/tmp/app'

puts YAML.dump({
  'config_vars' => {},
  'default_process_types' => {
    'web' => "bash -c 'export HOME=#{build_path} && export LD_LIBRARY_PATH=#{build_path}/vendor/libunwind:#{build_path}/vendor/libgettextpo && #{build_path}/vendor/dotnet/dotnet run'"
  }
})
